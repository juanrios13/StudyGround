<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="#009688"
        android:fontFamily="@font/raleway_extrabold_italic"
        android:text="StudyGround"
        android:textAlignment="center"
        android:textColor="#F6FDFD"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/medium"
        android:text="¿Qué deseas hacer hoy,"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="Santiago?"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="false"
        android:backgroundTint="#009688"
        android:cropToPadding="false"
        android:paddingLeft="20dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/profesor1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="Enseñar"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:backgroundTint="#009688"
        app:srcCompat="@drawable/grupodeestudio" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="243dp"
        android:layout_height="65dp"
        android:layout_marginLeft="85dp"
        android:fontFamily="@font/medium"
        android:text="Buscar compañeros para estudiar"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="24sp" />

</LinearLayout>